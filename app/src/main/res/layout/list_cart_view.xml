<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cart_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/cart_recycler_image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/item_burger_001"/>

        <TextView
            android:id="@+id/cart_recycler_tv_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/cart_recycler_image"
            app:layout_constraintTop_toTopOf="@+id/cart_recycler_image"
            tools:text="@string/burger_test_name"/>

        <TextView
            android:id="@+id/cart_recycler_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/cart_recycler_tv_name"
            app:layout_constraintTop_toBottomOf="@+id/cart_recycler_tv_name"
            tools:text="199p."/>

        <LinearLayout
            android:id="@+id/cart_recycler_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/cart_recycler_image"
            app:layout_constraintStart_toEndOf="@+id/cart_recycler_tv_name"
            app:layout_constraintTop_toTopOf="@+id/cart_recycler_image">

            <ImageButton
                android:id="@+id/minus_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/text_view_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="10"
                android:fontFamily="@font/roboto"/>

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>