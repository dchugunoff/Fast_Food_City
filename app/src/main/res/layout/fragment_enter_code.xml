<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EnterCode">

    <TextView
        android:id="@+id/tv_verification"
        style="@style/RegistrationTextViewLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="@string/code_verification_tv_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_verification_please"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/code_verification_tv_medium"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tv_verification"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification" />

    <LinearLayout
        android:id="@+id/verifyLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_please">

        <EditText
            android:id="@+id/verifyCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="1234"
            android:maxLength="4"
            android:maxLines="1"
            android:gravity="center"
            style="@style/styleRegNumber"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>