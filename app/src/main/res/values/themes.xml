<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastFoodCity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Убирает actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RegistrationTextViewLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="RegistrationTextViewMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="EnterCodeTextViewMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="styleRegNumber">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="styleRegNextButton">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="styleTotalCost">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>